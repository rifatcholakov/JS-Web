<h1>Create</h1>
<div class="form">
  <form action='/create' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{name}}">
    <label for="name">Description</label>
    <textarea id="name" name="description">{{description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficulty">
      <option value="1" {{#ifCond difficulty 1}}selected="selected"{{/ifCond}}>1 - Very Easy</option>
      <option value="2" {{#ifCond difficulty 2}}selected="selected"{{/ifCond}}>2 - Easy</option>
      <option value="3" {{#ifCond difficulty 3}}selected="selected"{{/ifCond}}>3 - Medium (Standard 3x3)</option>
      <option value="4" {{#ifCond difficulty 4}}selected="selected"{{/ifCond}}>4 - Intermediate</option>
      <option value="5" {{#ifCond difficulty 5}}selected="selected"{{/ifCond}}>5 - Expert</option>
      <option value="6" {{#ifCond difficulty 6}}selected="selected"{{/ifCond}}>6 - Hardcore</option>
    </select>
    <input type="submit" value="Create">
  </form>
</div>
