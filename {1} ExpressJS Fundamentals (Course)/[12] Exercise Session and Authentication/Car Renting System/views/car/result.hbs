<div id="container">
    <form id="search-form" action="/search">
        <h2>Search by class:</h2>
        <select name="class" id="class">
            <option value="all">All</option>
            {{#each classes}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <input class="submit-btn" type="submit" value="Search" />
    </form>
    {{#each cars}}
    <div class="car">
        <h2>{{carModel}}</h2>
        <img src="{{image}}" alt="car">
        <h2 class="price">Price per day: {{pricePerDay}} &euro;</h2>
        <a class="rent-btn" href="/cars/rent/{{_id}}">Rent</a>
        {{#if ../admin}}
        <a class="edit-btn" href="/cars/edit/{{_id}}">Edit</a>
        {{/if}}
    </div>
    {{/each}}
</div>