<form class="car-form" action="/cars/add" method="POST">
    <label for="carModel">Model:</label>
    <input class="input-field" type="text" id="carModel" name="carModel" value="{{carModel}}" />
    <label for="class">Class:</label>
    <select class="input-field" name="class" id="class">
        {{#each classes}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <label for="image">Image:</label>
    <input class="input-field" type="url" name="image" id="image" value="{{image}}" />
    <label for="description">Description:</label>
    <textarea class="input-field text-area" name="description" id="description">{{description}}</textarea>
    <label for="pricePerDay">Price per Day:</label>
    <input class="input-field" type="number" name="pricePerDay" id="pricePerDay" />
    <input class="submit-btn" type="submit" value="Add Car" />
</form>