<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Car Renting System</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/styles/site.css">
</head>

<body>
    <header>
        <nav>
            <ul>
                <li class="align-left first">
                    <a href="/">Home</a>
                </li>
                <li class="align-left">
                    <a href="/cars/all">View Avaliable Cars</a>
                </li>
                {{#if user}}
                <li class="align-left">
                    <a href="/user/{{user._id}}">My Rented Cars</a>
                </li>
                {{/if}} {{#if admin}}
                <li class="align-left">
                    <a href="/cars/add">Add Car</a>
                </li>
                {{/if}} {{#if user}}
                <li class="align-right">
                    <form id="logout-form" action="/user/logout" method="POST">
                        <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                    </form>
                </li>
                <li class="align-right">
                    <span>Hello, {{user.username}}</span>
                </li>
                {{else}}
                <li class="align-right">
                    <a href="/user/register">Register</a>
                </li>
                <li class="align-right">
                    <a href="/user/login">Login</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </header>

    <main>
        {{#if success}}
        <div id="successBox">
            <h2>{{success}}</h2>
        </div>
        {{else if error}}
        <div id="errorBox">
            <h2>{{error}}</h2>
        </div>
        {{else if car.error}}
        <div id="errorBox">
            <h2>{{car.error}}</h2>
        </div>
        {{/if}} {{{body}}}
    </main>

    <footer>
        <p>&copy; 2018 Rent A Car Service Ltd. All Rights Reserved</p>
    </footer>

    <script>
        let errBox = document.getElementById('errorBox');
        let succBox = document.getElementById('successBox');

        setTimeout(function () {
            if (errBox) {
                errBox.style.display = 'none';
            }

            if (succBox) {
                succBox.style.display = 'none';
            }
        }, 3000);
    </script>
</body>

</html>